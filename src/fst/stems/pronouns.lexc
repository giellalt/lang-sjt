+Gen+Sg3:%^WG%>есь # ;
+Gen+Pl1:%^WG%>едaн # ;
+Gen+Pl2:%^WG%>едaнт # ;
+Gen+Pl3:%^WG%>едӭсь # ;
+Acc+Sg1:%^WG%>aн # ;
+Acc+Sg2:%^WG%>aнт # ;
+Acc+Sg3:%^WG%>есь # ;
+Acc+Pl1:%^WG%>едан # ;
+Acc+Pl2:%^WG%>едант # ;
+Acc+Pl3:%^WG%>едӭсь # ;
+Loc+Sg1:%^WG%>сaн # ;
+Loc+Sg2:%^WG%>сaнт # ;
+Loc+Sg3:%^WG%>сесь # ;
+Loc+Pl1:%^WG%>eсaн # ;
+Loc+Pl2:%^WG%>eсaнт # ;
+Loc+Pl3:%^WG%>eсесь # ;
+Ill+Sg1:%>сан # ;
+Ill+Sg2:%>сант # ;
+Ill+Sg3:%>сесь # ;
+Ill+Pl1:%^WG%>едaн # ;
+Ill+Pl2:%^WG%>едaнт # ;
+Ill+Pl3:%^WG%>едӭсь # ;
+Com+Sg1:%^WG%>енан # ;
+Com+Sg2:%^WG%>енант # ;
+Com+Sg3:%^WG%>енесь # ;
+Com+Pl1:%^WG%>едангуэйм # ;
+Com+Pl2:%^WG%>едантгуэйм # ;
+Com+Pl3:%^WG%>едӭсьгуэйм # ;
+Abe+Sg1:%^WG%>aнха # ;
